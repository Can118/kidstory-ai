{
  "expo": {
    "name": "kidstory ai",
    "slug": "kidstory-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#8B5CF6"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.kidstory.ai",
      "buildNumber": "2",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "kidstory ai needs access to your photo library to let you select photos for personalized story experiences. Photos are stored only on your device and never uploaded.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "permissions": [
        "READ_MEDIA_IMAGES"
      ],
      "package": "com.kidstory.ai"
    },
    "extra": {
      "eas": {
        "projectId": "06850957-c726-4912-a372-b5c3d36900f0"
      }
    },
    "owner": "canturkay"
  }
}
